{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
      "es2020": true
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "object-curly-spacing": ["error", "always"],
      "curly": "warn",
      "eqeqeq": "warn",
      "no-throw-literal": "warn",
      "quotes": ["warn", "single"]
  },
  "ignorePatterns": [
      "out",
      "dist",
      "**/*.d.ts"
  ]
}
